name: Docker Image CI

on:
  push:
    branches: [ "main" ]
    paths-ignore:
    -  /kubernetes/deployment.yaml
  pull_request:
    branches: [ "main" ]

jobs:

  test:

    runs-on: self-hosted

    steps:
      - name: checkout code
        uses: actions/checkout@v4
      - name: setup node
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
       - name: installing dependencies
         run: npm ci
       - name: test dependencies
         run: npm test
