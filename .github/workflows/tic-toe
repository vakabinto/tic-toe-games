name: Docker Image CI

on:
  push:
    branches: [ "main" ]
    paths-ignore:
    -  /kubernetes/deployment.yaml
  pull_request:
    branches: [ "main" ]

jobs:

  test:

    runs-on: self-hosted

    steps:
    - uses: actions/checkout@v4
    - name: Build the Docker image
      run: docker build . --file Dockerfile --tag my-image-name:$(date +%s)
